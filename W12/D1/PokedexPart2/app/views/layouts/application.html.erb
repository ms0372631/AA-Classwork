<!DOCTYPE html>
<html>
  <head>
    <title>Pokedex</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.POKEMON_TYPES = <%=raw Pokemon::TYPES %>
      window.images = {
        pokeLogo: "<%= image_url("pokemon-logo.svg") %>"
      }
    </script>
  </head>

  <body>
    <header>
      <img src="<%= image_url("pokeball.svg") %>" alt="pokedex">
    </header>

    <%= yield %>
  </body>
</html>
